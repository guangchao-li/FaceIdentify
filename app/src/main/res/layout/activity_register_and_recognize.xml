<?xml version="1.0" encoding="utf-8"?>
<layout>

    <FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:id="@+id/dual_camera_ll_parent"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@android:color/black">

        <FrameLayout
            android:layout_gravity="start"
            android:layout_width="wrap_content"
            android:layout_height="match_parent">

                <TextureView
                    android:id="@+id/dual_camera_texture_preview_rgb"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent" />

                <com.arcsoft.arcfacedemo.widget.FaceRectView
                    android:id="@+id/dual_camera_face_rect_view"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent" />
                <FrameLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="bottom">

                    <TextureView
                        android:id="@+id/dual_camera_texture_preview_ir"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent" />

                    <com.arcsoft.arcfacedemo.widget.FaceRectView
                        android:id="@+id/dual_camera_face_rect_view_ir"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent" />

                </FrameLayout>
            <LinearLayout
                android:layout_marginTop="20dp"
                android:layout_width="180dp"
                android:layout_height="80dp"
                android:orientation="horizontal"
                android:layout_gravity="center|top"
                >

                <ImageView
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:id="@+id/face1"
                    />
                <ImageView
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:id="@+id/face2"
                    android:layout_marginLeft="20dp"
                    />


            </LinearLayout>
        </FrameLayout>

        <LinearLayout
            android:visibility="gone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_gravity="bottom|end"
            android:layout_margin="@dimen/common_margin" >

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:onClick="register"
                android:text="@string/register"/>
            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:onClick="setting"
                android:text="@string/recognize_settings"/>
            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:onClick="recognizeDebug"
                android:text="@string/page_debug"/>

        </LinearLayout>


        <androidx.recyclerview.widget.RecyclerView
            android:visibility="gone"
            app:compareResultList="@{compareResultList}"
            android:id="@+id/dual_camera_recycler_view_person"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
        <LinearLayout
            android:visibility="gone"
            android:id="@+id/ll_show"
            android:background="@mipmap/bg"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="20dp"
            android:orientation="vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/tv_name"
                android:text=""
                android:textColor="@color/color_white"
                android:layout_marginTop="25dp"
                android:layout_marginLeft="50dp"
                android:layout_marginRight="50dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <View
                android:layout_marginLeft="50dp"
                android:layout_marginRight="50dp"
                android:layout_marginTop="5dp"
                android:background="@color/whiteblue"
                android:layout_width="match_parent"
                android:layout_height="1dp"/>
            <TextView
                android:id="@+id/tv_xm"
                android:text=""
                android:textColor="@color/color_white"
                android:layout_marginTop="5dp"
                android:layout_marginLeft="50dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <View
                android:layout_marginLeft="50dp"
                android:layout_marginRight="50dp"
                android:layout_marginTop="5dp"
                android:background="@color/whiteblue"
                android:layout_width="match_parent"
                android:layout_height="1dp"/>
            <TextView
                android:id="@+id/tv_ry"
                android:text=""
                android:layout_marginLeft="50dp"
                android:textColor="@color/color_white"
                android:layout_marginTop="5dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <View
                android:layout_marginLeft="50dp"
                android:layout_marginRight="50dp"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="20dp"
                android:background="@color/whiteblue"
                android:layout_width="match_parent"
                android:layout_height="1dp"/>
        </LinearLayout>

        <LinearLayout
            android:visibility="gone"
            android:layout_gravity="left|bottom"
            android:id="@+id/ll_show1"
            android:background="@mipmap/bg"
            android:layout_marginLeft="20dp"
            android:layout_marginBottom="20dp"
            android:orientation="vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/tv_name1"
                android:text=""
                android:textColor="@color/color_white"
                android:layout_marginTop="25dp"
                android:layout_marginLeft="50dp"
                android:layout_marginRight="50dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <View
                android:layout_marginLeft="50dp"
                android:layout_marginRight="50dp"
                android:layout_marginTop="5dp"
                android:background="@color/whiteblue"
                android:layout_width="match_parent"
                android:layout_height="1dp"/>
            <TextView
                android:id="@+id/tv_xm1"
                android:text=""
                android:textColor="@color/color_white"
                android:layout_marginTop="5dp"
                android:layout_marginLeft="50dp"
                android:layout_marginRight="50dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <View
                android:layout_marginLeft="50dp"
                android:layout_marginRight="50dp"
                android:layout_marginTop="5dp"
                android:background="@color/whiteblue"
                android:layout_width="match_parent"
                android:layout_height="1dp"/>
            <TextView
                android:id="@+id/tv_ry1"
                android:text=""
                android:layout_marginLeft="50dp"
                android:layout_marginRight="50dp"
                android:textColor="@color/color_white"
                android:layout_marginTop="5dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <View
                android:layout_marginLeft="50dp"
                android:layout_marginRight="50dp"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="20dp"
                android:background="@color/whiteblue"
                android:layout_width="match_parent"
                android:layout_height="1dp"/>
        </LinearLayout>
        <LinearLayout
            android:visibility="gone"
            android:layout_gravity="right|top"
            android:id="@+id/ll_show3"
            android:background="@mipmap/bg"
            android:layout_marginRight="20dp"
            android:layout_marginTop="20dp"
            android:orientation="vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/tv_name3"
                android:text=""
                android:maxLines="3"
                android:textColor="@color/color_white"
                android:layout_marginTop="25dp"
                android:layout_marginLeft="50dp"
                android:layout_marginRight="50dp"
                android:layout_width="200dp"
                android:layout_height="wrap_content"/>
            <View
                android:layout_marginLeft="50dp"
                android:layout_marginRight="50dp"
                android:layout_marginTop="5dp"
                android:background="@color/whiteblue"
                android:layout_width="match_parent"
                android:layout_height="1dp"/>
            <TextView
                android:id="@+id/tv_xm3"
                android:text=""
                android:textColor="@color/color_white"
                android:layout_marginTop="5dp"
                android:layout_marginLeft="50dp"
                android:layout_marginRight="50dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <View
                android:layout_marginLeft="50dp"
                android:layout_marginRight="50dp"
                android:layout_marginTop="5dp"
                android:background="@color/whiteblue"
                android:layout_width="match_parent"
                android:layout_height="1dp"/>
            <TextView
                android:id="@+id/tv_ry3"
                android:text=""
                android:layout_marginRight="50dp"
                android:layout_marginLeft="50dp"
                android:textColor="@color/color_white"
                android:layout_marginTop="5dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <View
                android:layout_marginLeft="50dp"
                android:layout_marginRight="50dp"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="20dp"
                android:background="@color/whiteblue"
                android:layout_width="match_parent"
                android:layout_height="1dp"/>
        </LinearLayout>
        <LinearLayout
            android:visibility="gone"
            android:layout_gravity="right|bottom"
            android:id="@+id/ll_show4"
            android:background="@mipmap/bg"
            android:layout_marginRight="20dp"
            android:layout_marginBottom="20dp"
            android:orientation="vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/tv_name4"
                android:text=""
                android:textColor="@color/color_white"
                android:layout_marginTop="25dp"
                android:layout_marginLeft="50dp"
                android:layout_marginRight="50dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <View
                android:layout_marginLeft="50dp"
                android:layout_marginRight="50dp"
                android:layout_marginTop="5dp"
                android:background="@color/whiteblue"
                android:layout_width="match_parent"
                android:layout_height="1dp"/>
            <TextView
                android:id="@+id/tv_xm4"
                android:text=""
                android:textColor="@color/color_white"
                android:layout_marginTop="5dp"
                android:layout_marginLeft="50dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <View
                android:layout_marginLeft="50dp"
                android:layout_marginRight="50dp"
                android:layout_marginTop="5dp"
                android:background="@color/whiteblue"
                android:layout_width="match_parent"
                android:layout_height="1dp"/>
            <TextView
                android:id="@+id/tv_ry4"
                android:text=""
                android:layout_marginLeft="50dp"
                android:textColor="@color/color_white"
                android:layout_marginTop="5dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <View
                android:layout_marginLeft="50dp"
                android:layout_marginRight="50dp"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="20dp"
                android:background="@color/whiteblue"
                android:layout_width="match_parent"
                android:layout_height="1dp"/>
        </LinearLayout>

        <com.madgaze.smartglass.view.GestureView
            android:id="@+id/my_gesture"
            android:layout_width="match_parent"
            android:layout_height="match_parent"/>
    </FrameLayout>

    <data>
        <variable
            name="compareResultList"
            type="java.util.List&lt;com.arcsoft.arcfacedemo.ui.model.CompareResult&gt;" />
    </data>
</layout>